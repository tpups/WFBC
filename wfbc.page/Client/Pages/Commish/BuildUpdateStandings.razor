@page "/commish/build_standings"
@inherits BuildUpdateStandingsModel
@using WFBC.Client.Shared.Components.Buttons
@using MongoDB.Bson

<EditForm class="flex flex-col my-6 lg:mx-6 w-full md:w-1/2 lg:w-1/6" Model="@standings" OnValidSubmit="BuildStandings">
    <DataAnnotationsValidator />
    
    <label class="block">
        <span class="text-wfbc-blue-2">Select Year</span>
        <select class="mt-1 pl-2 h-6 block w-full rounded-md bg-wfbc-grey-1 border-transparent focus:border-wfbc-blue-2 focus:bg-wfbc-white-1 focus ring-0" 
                value="@selectedYear" 
                @onchange="OnYearChanged"
                disabled="@isCalculating">
            <option value="">-- Select Year --</option>
            @foreach (var year in availableYears)
            {
                <option value="@year">@year</option>
            }
        </select>
    </label>

    <!-- Progress Indicator -->
    @if (isCalculating)
    {
        <div class="flex items-center space-x-2 text-wfbc-blue-2 mt-4">
            <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-wfbc-blue-2"></div>
            <span class="text-sm">Processing...</span>
        </div>
    }

    <!-- Messages - Display in natural flow to avoid any positioning conflicts -->
    @if (!string.IsNullOrEmpty(calculationMessage))
    {
        <div class="mt-4 p-3 bg-green-100 border border-green-400 text-green-700 rounded shadow text-xs">
            <div class="font-medium break-words whitespace-pre-line">
                @calculationMessage
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="mt-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded shadow text-xs">
            <div class="font-medium break-words whitespace-pre-line">
                @errorMessage
            </div>
        </div>
    }

    @if (!isCalculating)
    {
        <Button OnClickFunction=PreviewStandings ButtonText="Preview Data" MaxWidth="max-w-full" MarginPadding="mx-2 mt-4 px-4 py-2" />
        <Button OnClickFunction=BuildStandings ButtonText="Build Season Standings" ButtonType="submit" MaxWidth="max-w-full" MarginPadding="mx-2 mt-2 px-4 py-2" />
    }
    else
    {
        <div class="mx-2 mt-4 px-4 py-2 max-w-full bg-gray-400 text-white rounded-full text-center">
            Calculating...
        </div>
    }
    <Button ButtonText="Cancel" Href="/commish/standings" MaxWidth="max-w-full" MarginPadding="mx-2 mt-2 px-4 py-2" />

    <!-- Information Panel -->
    <div class="mt-6 p-4 bg-wfbc-grey-1 rounded-md">
        <h3 class="text-wfbc-blue-2 font-semibold mb-2">About Standings Calculation</h3>
        <div class="text-sm text-gray-600 space-y-1">
            <p><strong>What this does:</strong> Calculates rotisserie standings for every day of the selected season.</p>
            <p><strong>Categories:</strong> AVG, OPS, R, RBI, SB, HR (hitting) and ERA, WHIP, K, IP, QS, Saves (pitching)</p>
            <p><strong>Time required:</strong> This process may take several minutes for a full season.</p>
            <p><strong>Preview:</strong> Use "Preview Data" to check if box score data exists for the selected year.</p>
        </div>
    </div>
</EditForm>

