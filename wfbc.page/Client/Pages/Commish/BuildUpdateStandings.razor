@page "/commish/build_standings"
@inherits BuildUpdateStandingsModel
@using WFBC.Client.Shared.Components.Buttons
@using MongoDB.Bson

<div class="flex flex-col my-6 lg:mx-6 w-full md:w-1/2 lg:w-1/6">
    <!-- Year Selection - Outside EditForm but same container -->
    <label class="block">
        <span class="text-wfbc-blue-2">Select Year</span>
        <select class="mt-1 pl-2 py-2 block w-full rounded-md bg-white border border-gray-300 text-black" 
                @bind="selectedYear"
                disabled="@isCalculating">
            <option value="">-- Select Year --</option>
            @foreach (var year in availableYears)
            {
                <option value="@year">@year</option>
            }
        </select>
    </label>

    <EditForm class="flex flex-col" Model="@formModel" OnValidSubmit="BuildStandings">

    <!-- Progress Indicator -->
    @if (isCalculating)
    {
        <div class="flex items-center space-x-2 text-wfbc-blue-2 mt-4">
            <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-wfbc-blue-2"></div>
            <span class="text-sm">Processing...</span>
        </div>
    }

    <!-- Messages - Display in natural flow to avoid any positioning conflicts -->
    @if (!string.IsNullOrEmpty(calculationMessage))
    {
        <div class="mt-4 p-3 bg-green-100 border border-green-400 text-green-700 rounded shadow text-xs">
            <div class="font-medium break-words whitespace-pre-line">
                @calculationMessage
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="mt-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded shadow text-xs">
            <div class="font-medium break-words whitespace-pre-line">
                @errorMessage
            </div>
        </div>
    }

    <!-- Confirmation Dialog -->
    @if (showConfirmationDialog)
    {
        <div class="fixed top-0 left-0 right-0 z-50 pt-24 md:pl-40 lg:pl-96 p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
            <div class="relative w-full max-w-md max-h-full">
                <div class="relative bg-wfbc-grey-1 rounded-lg shadow">
                    <div class="p-8 pt-12 text-center">
                        <!-- Warning Icon -->
                        <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 bg-wfbc-yellow-1 rounded-full">
                            <svg class="w-8 h-8 text-wfbc-black-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                            </svg>
                        </div>
                        
                        <!-- Title -->
                        <h3 class="mb-4 text-xl font-semibold text-wfbc-blue-2">Standings Already Exist</h3>
                        
                        <!-- Message -->
                        <div class="mb-6">
                            <p class="text-sm text-wfbc-black-1">
                                @confirmationMessage
                            </p>
                        </div>
                        
                        <!-- Buttons -->
                        <div class="flex flex-col sm:flex-row justify-center gap-3">
                            <Button OnClickFunction="ConfirmOverwrite" ButtonText="Yes, Overwrite" MaxWidth="max-w-full" MarginPadding="px-4 py-2" />
                            <Button OnClickFunction="CancelOverwrite" ButtonText="Cancel" MaxWidth="max-w-full" MarginPadding="px-4 py-2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (!isCalculating && !showConfirmationDialog)
    {
        <Button OnClickFunction=PreviewStandings ButtonText="Preview Data" MaxWidth="max-w-full" MarginPadding="mx-2 mt-4 px-4 py-2" />
        <Button OnClickFunction=BuildStandings ButtonText="Build Season Standings" ButtonType="submit" MaxWidth="max-w-full" MarginPadding="mx-2 mt-2 px-4 py-2" />
        <Button ButtonText="Back to Standings" Href="/commish/standings" MaxWidth="max-w-full" MarginPadding="mx-2 mt-2 px-4 py-2" />
    }
    else
    {
        <div class="mx-2 mt-4 px-4 py-2 max-w-full bg-gray-400 text-white rounded-full text-center">
            Calculating...
        </div>
        <Button OnClickFunction=CancelCalculation ButtonText="Cancel Calculation" MaxWidth="max-w-full" MarginPadding="mx-2 mt-2 px-4 py-2" />
        <Button ButtonText="Back to Standings" Href="/commish/standings" MaxWidth="max-w-full" MarginPadding="mx-2 mt-2 px-4 py-2" />
    }

    <!-- Information Panel -->
    <div class="mt-6 p-4 bg-wfbc-grey-1 rounded-md">
        <h3 class="text-wfbc-blue-2 font-semibold mb-2">About Standings Calculation</h3>
        <div class="text-sm text-gray-600 space-y-1">
            <p><strong>What this does:</strong> Calculates rotisserie standings for every day of the selected season.</p>
            <p><strong>Categories:</strong> AVG, OPS, R, RBI, SB, HR (hitting) and ERA, WHIP, K, IP, QS, Saves (pitching)</p>
            <p><strong>Time required:</strong> This process may take several minutes for a full season.</p>
            <p><strong>Preview:</strong> Use "Preview Data" to check if box score data exists for the selected year.</p>
        </div>
    </div>
</EditForm>
</div>

